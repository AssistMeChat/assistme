generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int        @id @default(autoincrement())
  name     String
  email    String     @unique
  password String
  messages Messages[]
}

model Messages {
  id       Int     @id @default(autoincrement())
  message  String
  userId   Int
  fromUser Boolean
  user     Users   @relation(fields: [userId], references: [id])

  @@index([userId])
}